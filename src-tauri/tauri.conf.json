{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "SpaceNinjaLauncher",
        "version": "0.0.3"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "fs": {
                "scope": [
                    "$RESOURCE/*"
                ]
            },
            "shell": {
                "all": true,
                "execute": true,
                "sidecar": true,
                "open": true,
                "scope": [
                    {
                        "name": "binaries/WarframeServer",
                        "sidecar": true
                    },
                    {
                        "name": "binaries/Warframe.x64",
                        "sidecar": true,
                        "args": [
                            "-fullscreen:0",
                            "-graphicsDriver:dx11",
                            "-gpuPreference:2",
                            "-cluster:public",
                            "-language:en",
                            "-deferred:0"
                        ]
                    }
                ]
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.tauri.build",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "externalBin": [
                "binaries/SpaceNinjaServer",
                "binaries/Warframe.x64"
            ],
            "resources": [
                "../SpaceNinjaServer/.env"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "SpaceNinjaLauncher",
                "width": 800,
                "height": 600
            }
        ]
    }
}